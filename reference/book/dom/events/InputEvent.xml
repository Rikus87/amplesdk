<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<class name="InputEvent" extends="dom:events:Event">
	<abstract>
		<locale>
			The InputEvent interface provides specific contextual information associated with Input Events.
		</locale>
		<locale xml:lang="ru">
			Интерфейс InputEvent предоставляет контекстную информацию, относительно введенного текста.
		</locale>
	</abstract>
	<examples/>
	<members>
		<methods>
			<method name="initInputEvent" type="Void">
				<arguments>
					<argument name="type" type="String" required="true">
						<description>
							<locale>
								Specifies the event type.
							</locale>
							<locale xml:lang="ru">
								Указывает на тип события (Event.type).
							</locale>
						</description>
					</argument>
					<argument name="canBubble" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event can bubble.
							</locale>
							<locale xml:lang="ru">
								Указывает, может ли событие распространяться в фазе "bubbling".
							</locale>
						</description>
					</argument>
					<argument name="cancelable" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event's default action can be prevented.
							</locale>
							<locale xml:lang="ru">
								Указывает, возможно ли отменить ответную реакцию браузера по умолчанию на событие.
							</locale>
						</description>
					</argument>
					<argument name="data" type="String" required="true">
						<description>
							<locale>
								Holds the value of the characters generated by the character device.
							</locale>
							<locale xml:lang="ru">
								Содержит UTF-8 текст.
							</locale>
						</description>
					</argument>
				</arguments>
				<description>
					<locale>
						Initializes attributes of a <link type="class" href="reference://dom/events/InputEvent">InputEvent</link> object.
					</locale>
					<locale xml:lang="ru">
						Метод initInputEvent используется для инициализации значения объекта InputEvent.
					</locale>
				</description>
			</method>
		</methods>
		<attributes />
		<properties>
			<property name="data" type="String" readonly="true">
				<description>
					<locale>
						Holds the value of the characters generated by the character device.
					</locale>
					<locale xml:lang="ru">
						Содержит введенные данные.
					</locale>
				</description>
			</property>
		</properties>
	</members>
	<remarks>
		<remark>
			<locale>Events of that type:</locale>
			<locale xml:lang="ru">События этого типа:</locale>
			<ul>
				<li><link type="event" href="reference://dom/core/Element">beforeinput</link></li>
				<li><link type="event" href="reference://dom/core/Element">input</link></li>
			</ul>
		</remark>
	</remarks>
	<examples />
</class>